          Some day, ill get the inspiration to start writing my own blog. <br />
          But for now enjoy staring at this section.
        </h3>
      </section>
    </main>

    <script>
      const a = localStorage.getItem("theme")
        ? localStorage.getItem("theme")
        : window.matchMedia("(prefers-color-scheme: dark)").matches
        ? "dark"
        : "light";
      if (a === "dark") {
        document.body.classList.add("dark");
        document.getElementById("themeIcon").classList.remove("fa-moon-o");
        document.getElementById("themeIcon").classList.add("fa-sun-o");
      } else {
        document.body.classList.add("light");
        document.getElementById("themeIcon").classList.add("fa-moon-o");
        document.getElementById("themeIcon").classList.remove("fa-sun-o");
      }
      function openMenu() {
        var main = document.getElementById("main");
        var header = document.getElementById("header");
        var open = document.getElementById("openBtn");
        var close = document.getElementById("closeBtn");
        main.classList.toggle("mainOpen");
        header.classList.toggle("headerOpen");
        open.classList.toggle("hide");
        close.classList.toggle("hide");
      }
      const copy = (val, id) => {
        navigator.clipboard.writeText(val);
        var tooltip = document.getElementById(id);
        tooltip.innerHTML = "Copied: " + val;
      };
      const outFunc = (val, id) => {
        var tooltip = document.getElementById(id);
        tooltip.innerHTML = val;
      };
      function ScrollTo(id) {
        if (window.innerWidth < 1024) {
          openMenu();
        }
        setTimeout(() => {
          var element = document.getElementById(id);
          var headerOffset = window.innerWidth > 1024 ? 64 : 90;
          var elementPosition = element.getBoundingClientRect().top;
          var offsetPosition =
            elementPosition + window.pageYOffset - headerOffset;

          window.scrollTo({
            top: offsetPosition,
            behavior: "smooth",
          });
        }, 100);
      }

      function themeToggel() {
        var icon = document.getElementById("themeIcon");
        if (document.body.classList.contains("light")) {
          document.body.classList.remove("light");
          document.body.classList.add("dark");
          icon.classList.toggle("fa-moon-o");
          icon.classList.toggle("fa-sun-o");
          localStorage.setItem("theme", "dark");
        } else {
          document.body.classList.add("light");
          document.body.classList.remove("dark");
          icon.classList.toggle("fa-moon-o");
          icon.classList.toggle("fa-sun-o");
          localStorage.setItem("theme", "light");
        }
      }
    </script>
  </body>
</html>
