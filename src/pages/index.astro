    <script>
      function openMenu() {
        var main = document.getElementById('main');
        var header = document.getElementById('header');
        var open = document.getElementById('openBtn');
        var close = document.getElementById('closeBtn');
        main.classList.toggle('mainOpen');
        header.classList.toggle('headerOpen');
        open.classList.toggle('hide');
        close.classList.toggle('hide');
      }
      const copy = (val, id) => {
        navigator.clipboard.writeText(val);
        var tooltip = document.getElementById(id);
        tooltip.innerHTML = 'Copied: ' + val;
      };
      const outFunc = (val, id) => {
        var tooltip = document.getElementById(id);
        tooltip.innerHTML = val;
      };
      function ScrollTo(id) {
        if (window.innerWidth < 1024) {
          openMenu();
        }
        setTimeout(() => {
          var element = document.getElementById(id);
          var headerOffset = window.innerWidth > 1024 ? 64 : 90;
          var elementPosition = element.getBoundingClientRect().top;
          var offsetPosition =
            elementPosition + window.pageYOffset - headerOffset;

          window.scrollTo({
            top: offsetPosition,
            behavior: 'smooth',
          });
        }, 100);
      }
      
    </script>
